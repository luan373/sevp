<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>SEVP</display-name>
	<welcome-file-list>
		<welcome-file>login.xhtml</welcome-file>

	</welcome-file-list>

	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	<!-- Tempo de sessão <session-config> <session-timeout>5</session-timeout> 
		</session-config> -->

	<context-param>
		<description>Seta o projeto para desenvolvimento, teste unitário, teste de sistema ou produção, que no caso são: "Development", "UnitTest", "SystemTest" ou "Production".
	</description>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>

	<!-- Direcionamento de página em caso de erros -->
	<error-page>
		<error-code>404</error-code>
		<location>/errorPages/page-404.xhtml</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/errorPages/page-500.xhtml</location>
	</error-page>
	<!-- <error-page> <exception-type>javax.faces.application.ViewExpiredException</exception-type> 
		<location>/errorPages/expiredSession.xhtml?faces-redirect=true</location> 
		</error-page> -->

	<!-- Segurança, login e configurações -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Visível para quem consegue logar como USUÁRIO.</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>user</role-name>
		</auth-constraint>
	</security-constraint>

	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/login.xhtml</form-login-page>
			<form-error-page>/login.xhtml</form-error-page>
		</form-login-config>
	</login-config>

	<security-role>
		<role-name>user</role-name>
	</security-role>

	<!-- Configurações Tomcat com o Postgres -->
	<resource-ref>
		<description>postgreSQL Datasource connection</description>
		<res-ref-name>jdbc/postgres</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>


</web-app>